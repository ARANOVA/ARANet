{% extends '::layout.html.twig' %}

{% block title %}ARANet - Proveedores - Editando "{{ vendor.vendorUniqueName }}"{% endblock %}

{% block content_header %}
    <div class="page-header">
        <h1><a href="{{ path('_vendors') }}">Proveedores</a> <small>Editando "{{ vendor.vendorUniqueName }}"</small></h1>
    </div>
{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">

        <form class="form-horizontal">
            <fieldset>
              <div class="control-group">
                <label class="control-label" for="input01">Nombre único</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Nombre de la empresa</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">C.I.F.</label>
                <div class="controls">
                  <input type="text" class="input-medium" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="select01">Negocio o actividad</label>
                <div class="controls">
                  <select id="select01">
                    <option>something</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Proveedor desde</label>
                <div class="controls">
                  <input type="text" class="input-medium" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Web del proveedor</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Comentarios</label>
                <div class="controls">
                    <textarea class="input-xxlarge" id="textarea" rows="3"></textarea>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Persona de contacto</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Dirección</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="input01">Etiquetas</label>
                <div class="controls">
                  <input type="text" class="input-xxlarge" id="input01">
                </div>
              </div>

              <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button class="btn">Cancel</button>
              </div>
            </fieldset>
          </form>
      
      </div>
  </div>

{% endblock %}
  
{% block sidebar %}
    <h4>Histórico de compras</h4>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Año</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for statistic in vendor.compras %}
            {% set total = total + statistic.value %}
            <tr>
                <td class="centered">{{ statistic.year }}</td>
                <td class="righted">{{ statistic.value }} €</td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2" class="righted">Total: {{ total }} €</th>
            </tr>
        </tfoot>
    </table>

    <h4>Pagos pendientes</h4>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Factura</th>
                <th>Vencimiento</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="centered">F-199-200</td>
                <td class="centered">13/09/12</td>
                <td class="righted">34567 €</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="righted">Total: 34567 €</th>
            </tr>
        </tfoot>
    </table>
    
    <div class="well">
        Acciones
    </div>
{% endblock %}